techzonesn.cc {
    reverse_proxy app:8000

    # WhatsApp HTTP API (WAHA) accessible via https://techzonesn.cc/waha/api
    handle_path /waha/* {
        reverse_proxy waha:3000
    }
}

n8n.techzonesn.cc {
    reverse_proxy n8n:5678
}

lbp1.site {
    reverse_proxy lbp1-web-1:8000 {
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Real-IP {remote_host}
    }

    encode gzip zstd

    @uploads path /static/uploads/*
    header @uploads Cache-Control "public, max-age=3600"

    @static {
        path /static/*
        not path /static/uploads/*
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
}

