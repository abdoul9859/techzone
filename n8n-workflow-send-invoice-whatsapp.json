    },
    {
      "parameters": {
        "jsCode": "// Importer les fonctions WhatsApp\nconst whatsapp = require('/data/n8n/whatsapp.js');\n\n// Extraire les données du webhook\nconst data = $input.first().json.body || $input.first().json;\n\nconsole.log('Données reçues:', JSON.stringify(data));\n\n// Construire l'URL de la facture HTML (accessible via réseau Docker)\nconst htmlUrl = whatsapp.buildPrintUrl(`/invoices/print/${data.invoice_id}`);\n\n// Construire le message caption\nconst caption = whatsapp.buildInvoiceMessage({\n  invoice_number: data.invoice_number,\n  client_name: data.client_name,\n  total: data.total\n});\n\nreturn [{\n  json: {\n    phone: whatsapp.normalizePhone(data.phone),\n    htmlUrl: htmlUrl,\n    filename: `Facture-${data.invoice_number}.pdf`,\n    caption: caption\n  }\n}];"
      },
      "id": "extract-data-node",
      "name": "Extract Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [450, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "={{ $env.WHATSAPP_SERVICE_URL || 'http://whatsapp-service:3001' }}/api/sendPdf",
        "authentication": "none",
        "sendBody": true,
        "contentType": "json",
        "specifyBody": "json",
        "jsonBody": "={{ $json }}",
        "options": {}
      },
      "id": "send-file-node",
      "name": "Send File WhatsApp",
